<section class="content connected network">
    {{#each server in servers itemController='NetworkVmPorts'}}
    <section {{bind-attr class=":item server.status"}}>
        <div class="what">
            <div class="img-wrap">
                {{#link-to 'server' server}}
                <span class="snf-pc-full snf-font"></span>
                <span {{bind-attr class=":os server.os"}}>{{server.os}}</span>
                {{/link-to}}
            </div>
            <h4>{{#link-to 'server' server}}{{server.name}}{{/link-to}}</h4>
        </div>
        <div class="clearfix">
            <ul class="connections">
                {{#each port in networkPorts}} 
                    {{partial 'details/ports-connected'}}
                {{/each}}
            </ul>
        </div>
    </section>
    {{/each}}
    <section class="connect-new machine">
        <div class="img-wrap">
            <a href="" data-reveal-id="connect-to-network">
                <span class="snf-pc-full snf-font"></span>
            </a>
        </div>
        <p><a href="">Connect VM</a></p>
    </section>
</section>
